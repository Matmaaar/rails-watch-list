
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container text-center">
    <h1>My movie lists</h1>

  </div>
</div>

<h2 class="p-3">My lists</h2>
<div class="cards">
<%@lists.each do |list| %>
<%if list.photo.attached?%>
  <div class="card-category"
    style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url("<%= cl_image_path list.photo.key, height: 300, crop: :fill %>")'>
<%else%>
   <div class="card-category"
    style='background-image: url("<%= asset_path 'default.jpg'%>")'>

<%end%>
  <%= link_to list.name, list_path(list), class: "text-decoration-none" %>
</div>
<% end %>
</div>




<a><%= link_to "Create New list", new_list_path, class: "text-decoration-none btn btn-success m-3" %></a>


