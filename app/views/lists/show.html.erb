
<%if @list.photo.attached?%>
  <div class="banner text-center text-white" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
    <h1><%=@list.name%></h1>
    </div>
<%else%>
   <div class="card-category"
    style='background-image: url("<%= asset_path 'default_image.jpg'%>")'></div>
<%end%>






<%= link_to "All Lists", lists_path, class: "text-decoration-none btn btn-primary m-3" %>
  <a><%= link_to "Add New Movie", new_list_bookmark_path(@list), class: "text-decoration-none btn btn-success" %></a>






<h2 class="p-3">Movies</h2>
<div class="cards">
<%@bookmarks.each do |bookmark| %>
<div class="" >
  <div  class="card-category m-3"
    style='background-image: url(<%=bookmark.movie.poster_url%>)'>

</div>
<div><p class="m-3"><%= bookmark.comment %></p></div>
<%= link_to "Delete",bookmark_path(bookmark), class: "btn btn-danger m-3",
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</div>

<% end %>
</div>
